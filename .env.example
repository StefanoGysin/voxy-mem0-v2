# Configuração da OpenAI
# Obtenha sua chave de API em: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sua_chave_api_aqui

# Modelo da OpenAI a ser usado (padrão é gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Modelo de embeddings (para geração de vetores)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Configuração do Supabase para armazenamento vetorial
# Obtenha a URL de conexão do Database na seção Database do seu projeto Supabase
DATABASE_URL=postgres://postgres:SuaSenha@db.xxxxx.supabase.co:5432/postgres?sslmode=require

# Configuração do Supabase para autenticação
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=sua_chave_anon_aqui
SUPABASE_SERVICE_KEY=sua_chave_service_aqui

# Controle de criação de contas
# true = permite que usuários criem contas diretamente na interface
# false = requer contato com o administrador para criar contas
ALLOW_ACCOUNT_CREATION=true

# Configuração de confirmação de email
# true = requer confirmação de email após o registro
# false = não requer confirmação de email (login imediato)
REQUIRE_EMAIL_CONFIRMATION=false

# Configurações de interface
LOG_LEVEL=INFO  # Opções: DEBUG, INFO, WARNING, ERROR
GUI_THEME=dark  # Opções: light, dark, system
GUI_LANG=pt-br  # Opções: pt-br, en-us

# Configurações de Cache e Desempenho
# Ativa ou desativa o sistema de cache
CACHE_ENABLED=true

# Tamanho máximo do cache de memórias (número de consultas armazenadas)
CACHE_SIZE=200

# Tempo de vida dos itens no cache (em segundos)
CACHE_TTL=300

# Ativa ou desativa o monitoramento de desempenho
PERFORMANCE_MONITORING=true

# Limite em milissegundos para considerar uma operação como lenta
PERFORMANCE_SLOW_OPERATION_THRESHOLD=500

# Nível de log para alertas de desempenho (WARNING recomendado)
PERFORMANCE_LOG_LEVEL=WARNING

# Configurações da memória vetorial
# Nome da coleção no Supabase para armazenar memórias
MEM0_COLLECTION_NAME=voxy_memories

# Número máximo de resultados retornados em consultas de memória
MEM0_MAX_RESULTS=5

# Prompt do sistema (padrão)
DEFAULT_SYSTEM_PROMPT=Você é um assistente de IA treinado para ser útil, harmless, e honesto. Responda de forma concisa e direta. Use as memórias fornecidas para personalizar suas respostas ao usuário.

